<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Venue Information</h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Name</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @venue.name %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Email</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @venue.email %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Address</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @venue.address %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Capacity</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @venue.capacity %> people</dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @venue.description %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Venue Events -->
  <div class="mt-8">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-medium text-gray-900">Events at <%= @venue.name %></h2>
      <%= link_to "Add New Event", new_event_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
    </div>

    <% if @upcoming_events.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <div class="px-4 py-5 border-b border-gray-200">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Upcoming Events</h3>
        </div>
        <ul class="divide-y divide-gray-200">
          <% @upcoming_events.each do |event| %>
            <li class="px-4 py-4 sm:px-6 hover:bg-gray-50">
              <%= link_to event_path(event), class: "block" do %>
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="text-lg font-medium text-gray-900"><%= event.name %></h4>
                    <p class="text-sm text-gray-500">
                      <%= event.date.strftime("%B %d, %Y at %I:%M %p") %>
                    </p>
                    <div class="mt-1">
                      <% if event.promoters.any? %>
                        <p class="text-sm text-gray-500">
                          Promoters: <%= event.promoters.map(&:name).join(", ") %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                  <div class="text-right">
                    <span class="font-medium text-gray-900">$<%= event.price %></span>
                    <p class="text-sm text-gray-500 mt-1">
                      <%= event.capacity %> capacity
                    </p>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="text-center py-12 bg-white shadow overflow-hidden sm:rounded-lg">
        <p class="text-gray-500 mb-4">No upcoming events.</p>
        <%= link_to "Schedule Your First Event", new_event_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div> 
