<nav class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path, class: "text-xl font-bold text-gray-800 hover:text-blue-600" do %>
          Pulse Nightlife
        <% end %>
      </div>

      <!-- Navigation Links -->
      <div class="hidden sm:flex sm:space-x-8 items-center">
        <%= link_to "Events", events_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium" %>
        <%= link_to "Venues", venues_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium" %>
        
        <% if promoter_signed_in? || venue_signed_in? %>
          <%= link_to "Add Event", new_event_path, class: "text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium" %>
        <% end %>
        
        <% if venue_signed_in? %>
          <%= link_to "Manage Venue", edit_venue_path(current_venue), class: "text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium" %>
        <% end %>

        <!-- Auth Links -->
        <% if consumer_signed_in? %>
          <div class="relative ml-3" data-controller="dropdown">
            <button class="flex items-center text-sm font-medium text-gray-600 hover:text-gray-900" data-action="click->dropdown#toggle">
              <%= current_consumer.name %>
              <svg class="ml-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            <div class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 py-1" data-dropdown-target="menu">
              <%= link_to "My Profile", consumer_path(current_consumer), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= link_to "My Orders", consumer_orders_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= link_to "Sign Out", destroy_consumer_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            </div>
          </div>
        <% elsif promoter_signed_in? %>
          <div class="relative ml-3" data-controller="dropdown">
            <button class="flex items-center text-sm font-medium text-gray-600 hover:text-gray-900" data-action="click->dropdown#toggle">
              <%= current_promoter.name %>
              <svg class="ml-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            <div class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 py-1" data-dropdown-target="menu">
              <%= link_to "My Events", promoter_events_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= link_to "Sign Out", destroy_promoter_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            </div>
          </div>
        <% elsif venue_signed_in? %>
          <div class="relative ml-3" data-controller="dropdown">
            <button class="flex items-center text-sm font-medium text-gray-600 hover:text-gray-900" data-action="click->dropdown#toggle">
              <%= current_venue.name %>
              <svg class="ml-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            <div class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 py-1" data-dropdown-target="menu">
              <%= link_to "Venue Dashboard", venue_events_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              <%= link_to "Sign Out", destroy_venue_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
            </div>
          </div>
        <% else %>
          <div class="flex items-center space-x-4">
            <div class="relative" data-controller="dropdown">
              <button class="text-gray-600 hover:text-gray-900 px-3 py-2 text-sm font-medium flex items-center" data-action="click->dropdown#toggle">
                Sign In
                <svg class="ml-1 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </button>
              <div class="hidden absolute right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 py-1" data-dropdown-target="menu">
                <%= link_to "Consumer Sign In", new_consumer_session_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Promoter Sign In", new_promoter_session_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Venue Sign In", new_venue_session_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
              </div>
            </div>
            <%= link_to "Sign Up", new_consumer_registration_path, class: "ml-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
          </div>
        <% end %>
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center sm:hidden">
        <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="sm:hidden" id="mobile-menu">
    <div class="pt-2 pb-3 space-y-1">
      <%= link_to "Events", events_path, class: "block px-3 py-2 text-base font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50" %>
      <%= link_to "Venues", venues_path, class: "block px-3 py-2 text-base font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50" %>
      
      <% if promoter_signed_in? || venue_signed_in? %>
        <%= link_to "Add Event", new_event_path, class: "block px-3 py-2 text-base font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50" %>
      <% end %>
      
      <% if venue_signed_in? %>
        <%= link_to "Manage Venue", edit_venue_path(current_venue), class: "block px-3 py-2 text-base font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50" %>
      <% end %>
    </div>
  </div>
</nav> 
